@model UpdateResidentCommandRequest

@{
     ViewData["Title"] = "Site Sakini Güncelle";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["errormessage"] != null)
{
     <p style="color:red;">
          @TempData["errormessage"]?.ToString()
     </p>
}

<style>
     .form-control {
         border: 1px solid #0080ff;
     }
</style>

<div class="container my-4 pt-4">
     <div class="row">
          <div class="col-md-12">
               <form asp-action="UpdateResident" asp-controller="Residents" method="post">

                    <input type="hidden" asp-for="Id" />

                    <div class="row mt-2">

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label>Adı:</label>
                                   <input type="text" class="form-control" asp-for="FirstName" />
                                   <span class="text-danger" asp-validation-for="FirstName"></span>
                              </div>
                         </div>

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label>Soyadı:</label>
                                   <input type="text" class="form-control" asp-for="LastName" />
                                   <span class="text-danger" asp-validation-for="LastName"></span>
                              </div>
                         </div>

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label>TC No:</label>
                                   <input type="text" class="form-control" asp-for="UserName" />
                                   <span class="text-danger" asp-validation-for="UserName"></span>
                              </div>
                         </div>

                    </div>

                    <div class="row mt-2">

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label>TC No:</label>
                                   <input type="text" class="form-control" asp-for="IdentityNumber" />
                                   <span class="text-danger" asp-validation-for="IdentityNumber"></span>
                              </div>
                         </div>

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label>Email:</label>
                                   <input type="text" class="form-control" asp-for="Email" />
                                   <span class="text-danger" asp-validation-for="Email"></span>
                              </div>
                         </div>

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label>Telefon Numarası:</label>
                                   <input type="text" class="form-control" asp-for="PhoneNumber" />
                                   <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                              </div>
                         </div>

                    </div>

                    <div class="row mt-2">

                         <div class="col-md-3">
                              <div class="form-group">
                                   <label>Araç Plakası:</label>
                                   <input type="text" class="form-control" asp-for="CarPlate" />
                                   <span class="text-danger" asp-validation-for="CarPlate"></span>
                              </div>
                         </div>

                         <div class="col-md-3">
                              <div class="form-group">
                                   <input type="checkbox" class="form-check-input" asp-for="IsHirer">
                                   <label class="form-check-label">Kiracı mı?</label>
                              </div>
                         </div>

                         <div class="col-md-3">
                              <div class="form-group">
                                   <input type="checkbox" class="form-check-input" asp-for="IsOwner">
                                   <label class="form-check-label">Ev sahibi mi?</label>
                              </div>
                         </div>

                         <div class="col-md-3">
                              <div class="form-group">
                                   <input type="checkbox" class="form-check-input" asp-for="IsCarOwner">
                                   <label class="form-check-label">Araç sahibi mi?</label>
                              </div>
                         </div>

                    </div>


                    @*####################*@
                    <div class="form-group">
                         <button class="btn btn-info" type="submit">Kaydet</button>
                         <a class="btn btn-info" asp-action="GetResidents" asp-controller="Residents">Geri</a>
                    </div>
                    @*####################*@

               </form>
          </div>
     </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
