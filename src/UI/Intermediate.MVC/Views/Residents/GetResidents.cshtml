@model IReadOnlyList<GetResidentsQueryResponse>

@{
     ViewData["Title"] = "Site Sakinleri";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary btn-block" asp-action="CreateResident" asp-controller="Residents">Yeni Site Sakini Ekle</a>

<table class="table table-striped table-hover">
     <thead class="thead-light">

          <tr>
               <th>ID</th>
               <th>Ad</th>
               <th>Soyad</th>
               <th>Email</th>
               <th>Telefon Numarası</th>
               <th></th>
               <th></th>
          </tr>

     </thead>
     <tbody>

          @foreach (var item in Model)
          {
               <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                         <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="UpdateResident" asp-controller="Residents">Güncelle</a>
                    </td>
                    <td>
                         <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="RemoveResident" asp-controller="Residents">Sil</a>
                    </td>
               </tr>
          }

     </tbody>

</table>