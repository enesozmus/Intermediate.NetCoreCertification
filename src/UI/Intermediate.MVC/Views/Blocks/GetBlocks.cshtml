@model IReadOnlyList<GetBlocksQueryResponse>

@{
     ViewData["Title"] = "Bloklar";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary btn-block" asp-action="CreateBlock" asp-controller="Blocks">Yeni Blok Ekle</a>
<table class="table table-striped table-hover">
     <thead class="thead-light">
          
          <tr>
               <th>ID</th>
               <th>Blok Adı</th>
               <th>Toplam Kat</th>
               <th>Toplam Daire</th>
               <th>Adres</th>
               <th></th>
               <th></th>
          </tr>

     </thead>
     <tbody>

          @foreach (var item in Model)
          {
               <tr>
                    <td>@item.Id</td>
                    <td>@item.BlockName</td>
                    <td>@item.TotalFloors</td>
                    <td>@item.TotalFlats</td>
                    <td>@item.Address</td>
                    <td>
                         <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="UpdateBlock" asp-controller="Blocks">Güncelle</a>
                    </td>
                    <td>
                         <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="RemoveBlock" asp-controller="Blocks">Sil</a>

                    </td>
               </tr>
          }

     </tbody>

</table>