@model CreateBlockCommandRequest

@{
     ViewData["Title"] = "CreateBlock";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["errormessage"] != null)
{
     <p style="color:red;">
          @TempData["errormessage"]?.ToString()
     </p>
}

<style>
     .form-control {
         border: 1px solid #0080ff;
     }
</style>

<div class="container my-4 pt-4">
     <div class="row">
          <div class="col-md-12">
               <form asp-action="CreateBlock" asp-controller="Blocks" method="post">

                    <div class="row mt-2">

                         <div class="col-md-6">
                              <div class="form-group">
                                   <label>Blok Adı</label>
                                   <span class="text-danger" asp-validation-for="BlockName"></span>
                                   <input type="text" class="form-control" asp-for="BlockName" />
                              </div>
                         </div>

                         <div class="col-md-6">
                              <div class="form-group">
                                   <label>Toplam Kat</label>
                                   <span class="text-danger" asp-validation-for="TotalFlats"></span>
                                   <input type="text" class="form-control" asp-for="TotalFlats" />
                              </div>
                         </div>

                    </div>

                    <div class="row mt-2">

                         <div class="col-md-6">
                              <div class="form-group">
                                   <label>Toplam Daire</label>
                                   <span class="text-danger" asp-validation-for="TotalFloors"></span>
                                   <input type="text" class="form-control" asp-for="TotalFloors" />
                              </div>
                         </div>

                         <div class="col-md-6">
                              <div class="form-group">
                                   <label>Adres</label>
                                   <span class="text-danger" asp-validation-for="Address"></span>
                                   <input type="text" class="form-control" asp-for="Address" />
                              </div>
                         </div>

                    </div>

                    @*####################*@
                    <div class="form-group">
                         <button class="btn btn-info" type="submit">Kaydet</button>
                         <a class="btn btn-info" asp-action="GetBlocks" asp-controller="Blocks">Geri</a>
                    </div>
                    @*####################*@

               </form>
          </div>
     </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>