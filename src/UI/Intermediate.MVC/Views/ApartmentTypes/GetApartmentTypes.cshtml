@model IReadOnlyList<GetApartmentTypesQueryResponse>

@{
     ViewData["Title"] = "Daire Tipleri";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary btn-block" asp-action="CreateApartmentType" asp-controller="ApartmentTypes">Yeni Daire Tipi Ekle</a>

<table class="table table-striped table-hover">
     <thead class="thead-light">
          
          <tr>
               <th>ID</th>
               <th>Daire Tipi</th>
               <th></th>
               <th></th>
          </tr>

     </thead>
     <tbody>

          @foreach (var item in Model)
          {
               <tr>
                    <td>@item.Id</td>
                    <td>@item.Type</td>
                    <td>
                         <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="UpdateApartmentType" asp-controller="ApartmentTypes">Güncelle</a>
                    </td>
                    <td>
                         <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="RemoveApartmentType" asp-controller="ApartmentTypes">Sil</a>

                    </td>
               </tr>
          }

     </tbody>

</table>