@model UpdateApartmentTypeCommandRequest

@{
     ViewData["Title"] = "Daire Tipi Güncelle";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["errormessage"] != null)
{
     <p style="color:red;">
          @TempData["errormessage"]?.ToString()
     </p>
}

<style>
     .form-control {
         border: 1px solid #0080ff;
     }
</style>

<div class="container my-4 pt-4">
     <div class="row">
          <div class="col-md-12">
               <form asp-action="UpdateApartmentType" asp-controller="ApartmentTypes" method="post">

                    <div class="row mt-2">

                         <div class="col-md-6">
                              <div class="form-group">
                                   <label>Blok Adı</label>
                                   <input type="text" class="form-control" asp-for="Type" />
                                   <span class="text-danger" asp-validation-for="Type"></span>
                              </div>
                         </div>

                    </div>

                    @*####################*@
                    <div class="form-group">
                         <button class="btn btn-info" type="submit">Kaydet</button>
                         <a class="btn btn-info" asp-action="GetApartmentTypes" asp-controller="ApartmentTypes">Geri</a>
                    </div>
                    @*####################*@

               </form>
          </div>
     </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>