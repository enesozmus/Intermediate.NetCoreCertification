@model SendMessageCommandRequest

@{
     ViewData["Title"] = "SendMessage";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["errormessage"] != null)
{
     <p style="color:red;">
          @TempData["errormessage"]?.ToString()
     </p>
}

<style>
     .form-control {
         border: 1px solid #0080ff;
     }
</style>

<div class="container my-4 pt-4">
     <div class="row">
          <div class="col-md-12">
               <form asp-action="SendMessage" asp-controller="Messages" method="post">

                    <div class="row mt-2">

                         <div class="col-md-6">
                              <div class="form-group">
                                   <label asp-for="ReceiveUserId">Site Sakinleri</label>
                                   <select asp-for="ReceiveUserId" asp-items="ViewBag.Residents" class="form-control">
                                        <option value="-1" disabled selected>Lütfen seçin...</option>
                                   </select>
                                   <span asp-validation-for="ReceiveUserId" class="text-danger"></span>
                              </div>
                         </div>

                         <div class="col-md-6">
                              <div class="form-group">
                                   <label>Mesaj:</label>
                                   <input type="text" class="form-control" asp-for="Text" />
                                   <span class="text-danger" asp-validation-for="Text"></span>
                              </div>
                         </div>

                    </div>

                    @*####################*@
                    <div class="form-group">
                         <button class="btn btn-info" type="submit">Gönder</button>
                         <a class="btn btn-info" asp-action="GetSentMessages" asp-controller="Messages">Geri</a>
                    </div>
                    @*####################*@

               </form>
          </div>
     </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

