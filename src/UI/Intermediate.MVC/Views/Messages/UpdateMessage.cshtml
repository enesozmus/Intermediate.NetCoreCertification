@model UpdateMessageCommandRequest

@{
     ViewData["Title"] = "UpdateMessage";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["errormessage"] != null)
{
     <p style="color:red;">
          @TempData["errormessage"]?.ToString()
     </p>
}

<div class="container my-4 pt-4">
     <div class="row">

          <div class="col-md-12">
               <form asp-action="UpdateMessage" asp-controller="Messages" method="post">

                    <input type="hidden" asp-for="Id" />

                    <div class="row mt-2">

                         <div class="col-md-10">
                              <div class="form-group">
                                   <label>Fatura Tutarı:</label>
                                   <input type="text" class="form-control" asp-for="Text" />
                                   <span class="text-danger" asp-validation-for="Text"></span>
                              </div>
                         </div>

                         <div class="col-md-2">
                              <div class="form-group">
                                   <input type="checkbox" class="form-check-input" asp-for="IsLooked">
                                   <label class="form-check-label">Okundu mu?</label>
                              </div>
                         </div>

                    </div>


                    @*####################*@
                    <div class="form-group">
                         <button class="btn btn-info" type="submit">Kaydet</button>
                         <a class="btn btn-info" asp-action="GetSentMessages" asp-controller="Messages">Geri</a>
                    </div>

               </form>
          </div>
     </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

