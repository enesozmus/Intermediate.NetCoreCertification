@model IReadOnlyList<GetApartmentsQueryResponse>

@{
     ViewData["Title"] = "Daireler";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary btn-block" asp-action="CreateApartment" asp-controller="Apartments">Yeni Daire Ekle</a>

<table class="table table-striped table-hover">
     <thead class="thead-light">

          <tr>
               <th>ID</th>
               <th>Bulunduğu Blok</th>
               <th>Kat</th>
               <th>Kapı Numarası</th>
               <th>Boş mu?</th>
               <th>Daire Tipi</th>
               <th>Kiracı/Sahibi</th>
               <th></th>
               <th></th>
          </tr>

     </thead>
     <tbody>

          @foreach (var item in Model)
          {
               <tr>
                    <td>@item.Id</td>
                    <td>@item.BlockName</td>
                    <td>@item.Floor</td>
                    <td>@item.DoorNumber</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.ApartmentType</td>
                    <td>@item.AppUser</td>
                    <td>
                         <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="UpdateApartment" asp-controller="Apartments">Güncelle</a>
                    </td>
                    <td>
                         <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="RemoveApartment" asp-controller="Apartments">Sil</a>
                    </td>
               </tr>
          }

     </tbody>

</table>