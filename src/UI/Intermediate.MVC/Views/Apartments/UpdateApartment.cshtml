@model UpdateApartmentCommandRequest

@{
     ViewData["Title"] = "Daire Güncelle";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["errormessage"] != null)
{
     <p style="color:red;">
          @TempData["errormessage"]?.ToString()
     </p>
}

<div class="container my-4 pt-4">
     <div class="row">
          <div class="col-md-12">
               <form asp-action="UpdateApartment" asp-controller="Apartments" method="post">

                    <input type="hidden" asp-for="Id" />

                    <div class="row mt-2">

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label asp-for="AppUserId">Site Sakinleri</label>
                                   <select asp-for="AppUserId" asp-items="ViewBag.Residents" class="form-control">
                                        <option value="-1" disabled selected>Lütfen seçin...</option>
                                   </select>
                                   <span asp-validation-for="AppUserId" class="text-danger"></span>
                              </div>
                         </div>

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label asp-for="BlockId">Bloklar</label>
                                   <select asp-for="BlockId" asp-items="ViewBag.Blocks" class="form-control">
                                        <option value="-1" disabled selected>Lütfen seçin...</option>
                                   </select>
                                   <span asp-validation-for="BlockId" class="text-danger"></span>
                              </div>
                         </div>

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label asp-for="ApartmentTypeId">Daire Tipleri</label>
                                   <select asp-for="ApartmentTypeId" asp-items="ViewBag.ApartmentTypes" class="form-control">
                                        <option value="-1" disabled selected>Lütfen seçin...</option>
                                   </select>
                                   <span asp-validation-for="ApartmentTypeId" class="text-danger"></span>
                              </div>
                         </div>

                    </div>

                    <div class="row mt-2">

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label>Kat:</label>
                                   <input type="number" class="form-control" asp-for="Floor" />
                                   <span class="text-danger" asp-validation-for="Floor"></span>
                              </div>
                         </div>

                         <div class="col-md-4">
                              <div class="form-group">
                                   <label>Kapı Numarası:</label>
                                   <input type="number" class="form-control" asp-for="DoorNumber" />
                                   <span class="text-danger" asp-validation-for="DoorNumber"></span>
                              </div>
                         </div>

                         <div class="col-md-4">
                              <div class="form-group">
                                   <input type="checkbox" class="form-check-input" asp-for="IsAvailable">
                                   <label class="form-check-label">Boş/Dolu</label>
                              </div>
                         </div>

                    </div>

                    @*####################*@
                    <div class="form-group">
                         <button class="btn btn-info" type="submit">Kaydet</button>
                         <a class="btn btn-info" asp-action="GetApartments" asp-controller="Apartments">Geri</a>
                    </div>

               </form>
          </div>
     </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>